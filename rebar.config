%% vim: ts=4 sw=4 et sts=4 ft=erlang
{erl_opts, [
	debug_info
]}.
{cover_enabled, true}.
{xref_warnings, true}.
{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    locals_not_used,
    deprecated_function_calls,
    deprecated_functions
]}.

{deps, [
    {mutagen, {git, "https://github.com/nitrogen/mutagen", {branch, master}}}
]}.
